<resources>
    <!-- Base application theme. -->
    <style name="Theme.VPNApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary500</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="colorSecondary">@color/colorPrimary700</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarDivider">@android:color/transparent</item>
    </style>

    <style name="selectedTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding12</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="normalTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding12</item>
        <item name="android:textSize">@dimen/textSize18</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="background">@drawable/rounded_border</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <!-- OnBoarding START -->
    <style name="SliderRootLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">@dimen/appintro_statusbar_height</item>
        <item name="android:paddingStart">@dimen/padding0</item>
        <item name="android:paddingEnd">@dimen/padding0</item>
        <item name="android:paddingBottom">@dimen/appintro_statusbar_height</item>
    </style>

    <style name="SliderTitle">
        <item name="android:id">@id/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:paddingStart">@dimen/padding20</item>
        <item name="android:paddingEnd">@dimen/padding20</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="SliderDescription">
        <item name="android:id">@id/description</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingStart">@dimen/padding30</item>
        <item name="android:paddingEnd">@dimen/padding30</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="SliderImage">
        <item name="android:id">@id/image</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">5</item>
        <item name="android:layout_marginTop">@dimen/padding16</item>
        <item name="android:layout_marginBottom">@dimen/padding16</item>
        <item name="android:scaleType">centerInside</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
    </style>
    <!-- OnBoarding END -->

    <style name="normalPlanLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/padding100</item>
    </style>

    <style name="normalPlanBoldTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize20</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="normalPlanNormalTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textSize13</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
        <item name="fontFamily">@font/poppins</item>
    </style>

    <!-- Settings -->
    <style name="settingImage">
        <item name="android:layout_width">@dimen/padding48</item>
        <item name="android:layout_height">@dimen/padding48</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:tint">@color/colorPrimary</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:padding">@dimen/padding10</item>
    </style>

    <style name="settingImageGray" parent="settingImage">
        <item name="android:tint">@color/grey_40</item>
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="settingLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/padding54</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">@dimen/padding4</item>
        <item name="android:paddingRight">@dimen/padding4</item>
    </style>

    <style name="fontLightSettingStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:layout_marginStart">@dimen/padding10</item>
        <item name="android:layout_marginEnd">@dimen/padding16</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="fontRegularStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_40</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/padding10</item>
        <item name="android:layout_marginLeft">@dimen/padding16</item>
        <item name="android:layout_marginRight">@dimen/padding16</item>
        <item name="android:layout_marginTop">@dimen/padding14</item>
    </style>
    <!-- -->
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/colorPrimary500</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="adsBottomStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Setting End -->

    <style name="aboutCardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/padding10</item>
        <item name="android:layout_marginRight">@dimen/padding10</item>
        <item name="android:layout_marginBottom">@dimen/padding10</item>
    </style>

    <style name="aboutImageView">
        <item name="android:layout_width">@dimen/padding30</item>
        <item name="android:layout_height">@dimen/padding30</item>
        <item name="android:layout_marginTop">@dimen/padding4</item>
        <item name="android:tint">@color/grey_60</item>
    </style>

    <style name="aboutLinearClick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding15</item>
    </style>

    <style name="aboutLinearSimple">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="verticalLine">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/padding10</item>
        <item name="android:layout_marginRight">@dimen/padding10</item>
        <item name="android:background">@drawable/line_about</item>
    </style>

    <style name="fontMediumAboutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDarkText</item>
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="fontLightAboutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="ValueTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">@dimen/textSize24</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">@dimen/padding12</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="UnitTextStyle">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/cp_1</item>
        <item name="android:textSize">@dimen/textSize12</item>
        <item name="android:fontFamily">@font/poppins</item>

    </style>

    <!-- Bottom Flux Dialog -->
    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bf_dialog_round</item>
    </style>
    <!-- Bottom Flux End -->

    <style name="blinkt.baseTheme" parent="android:Theme.DeviceDefault.Light" />

    <style name="blinkt" parent="blinkt.baseTheme" />

    <style name="blinkt.dialog" parent="android:Theme.DeviceDefault.Light.Dialog" />
</resources>